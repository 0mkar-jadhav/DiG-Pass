<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DiGpass." parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/back</item>
        <item name="colorPrimaryDark">@color/back</item>
        <item name="colorAccent">@color/back</item>
        <item name="android:statusBarColor">@color/back</item>
    </style>

    <style name="Theme.DiGpass" parent="Base.Theme.DiGpass" />

    <style name="edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="edittextcustom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/custom_edittext</item>
    </style>

    <style name="button">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/back</item>
    </style>
    
    <style name="spinner">
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:gravity">center</item>
        <item name="android:popupBackground">@color/grey</item>
    </style>

    <style name="ref">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>